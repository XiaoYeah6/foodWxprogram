
#container{
  width: 100vw;
  /* height: 100vh; */
  background: #f0f3fa;
  min-height:100%;
}

.science-list{
  display: flex;
  flex-wrap: wrap;
  padding: 20px 0px 10px 13px;
}
.science-item{
  margin-right: 5px;
  margin-bottom: 20px;
  background: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.science-item .img{
  width: 30px;
  height: 30px;
  margin: 20px;
}
.science-item .title{
  color: #333;
  font-size: 18px;
  padding: 5px
}
.science-item .descrip{
  color: #999;
  font-size: 15px;
  padding: 15px 10px;
}
.science-item .more{
  background: #35d0c0;
  padding: 5px;
}