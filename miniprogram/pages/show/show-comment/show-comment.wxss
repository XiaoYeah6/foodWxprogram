/* pages/show/show-comment/show-comment.wxss */
#container{
  background: #fff;
}
.comment-list{
  padding: 5px;
}
.header{
  display: flex;
}
.comment-item{
  margin-top: 5px;
  padding-top: 5px;
  /* border-top: 1px solid #eee; */
}
.comment-item .content{
  margin-left: 50px;
  border-bottom: 1px solid #eee;
  padding-bottom: 5px;
  color: #333;
}
.header .author-img{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.header .author-infor{
  margin-left: 10px;
}
.author-infor .name{
  color: #333;
  font-size: 17px;
}
.author-infor .time{
  color: #999;
  font-size: 13px;
}
.header .author-img image{
  width: 50px;
  height: 50px;

}
.header .author-infor{
  flex: 1;
}


.comment-box .pencil-icon{
  width: 20px;
  height: 20px;
}
.comment-box .happy-icon{
  width: 20px;
  height: 20px;
}
.comment-box {
  position: fixed;
  bottom: 0px;
  padding: 8px 10px;
  background: #fff;
}
.comment-box .input{
  display: flex;
  border-bottom: 1px solid #eee;
}
.comment-box .input input{
  width: 520rpx;
}
.comment-box .submit-btn{
  height: 40px;
  position: absolute;
  top: 0px;
  right: -100rpx;
  font-size: 15px;
  color: #666;
  background: #fff;
  padding-left: 10px;
}