/* pages/profile/profile.wxss */
#container{
  /* position: relative; */
  height: 100vh;
}
.user-infor {
  margin-top: 10px;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  overflow: hidden;
}
.user-infor .user-img image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.user-infor .text{
  text-align: center;
}
.user-list{
  position: absolute;
  top: 400rpx;
  width: 100%;
}
.user-list .common{
  border-bottom: 1px solid #ccc;
  width: 100%;
  height: 39px;
  line-height: 39px;
  position: relative;
}
.user-list .common .text{
  margin-left: 20px;
}
.user-list .common image{
  width: 22px;
  height: 22px;
  position: absolute;
  right: 10px;
  top: 7px;
}
.user-list .share button{
  /* background: #ccc; */
  height: 39px;
  position: relative;
  top: -39px;
}