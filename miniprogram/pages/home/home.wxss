/* pages/home/home.wxss */
.search-container{
  position: relative;
  background-color: #06c1ae;
  padding: 10px 0px;
}
.search-container .search-icon{
  width: 24px;
  height: 24px;
  position: absolute;
  right: 25px;
  top: 15px;
}
.search-container input{
  padding: 5px 10px;
  width: 80%;
  margin: 0 auto;
  border-radius: 5px;
  background-color: #68dbce;
  background: rgba(68, db, ce,.8)
}
.swiper{
  border-bottom: 1px solid #ccc;
}
.hot-search-list .hot-title{
  padding: 10px 10px;
}
.hot-search-list{
  margin-bottom: 10px;
}
.hot-search-list .list{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  /* padding: 5px 0px 5px 5px; */
}
.hot-search-list .item{
  width: 25%;
  /* padding: 5px; */
  text-align: center;
  background-color: rgba(0, 0, 0, .01);
  height: 30px;
  line-height: 30px;
  margin: 0px 18px 5px 7px;
}
.recommend{
  padding: 10px 5px;
}
.recommend .recommend-title{
  text-align: center;
  border-bottom: 1px solid #ccc;
  margin-bottom: 5px;
  padding: 3px 0px;
}
.recommend-item{
  display: flex;
}
.recommend-item .main-bg{
  width: 150px;
  height: 150px;
}
.recommend-item .item-infor{
  padding: 5px 1px 5px 5px;
}
.recommend-item .title{
  font-size: 18px;
}
.recommend-item .material{
  margin: 10px 0px;
  color: #666;
  font-size: 15px;
}
.recommend-item .remark{
  display: flex;
}
.recommend-item .view ,.recommend-item .star {
  margin-right: 5px;
  font-size: 15px;
  color: #555;
}
.recommend-item .view image,.recommend-item .star image{
  width: 18px;
  height: 18px;
  margin-right: 2px;
}